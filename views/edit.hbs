{{!-- edit的method="POST"，要新增路由以接住資料 --}}
<form action="/todos/{{todo.id}}?_method=PUT" method="POST">
  <div class="input-group">
    <div class="input-group-text">
      {{!-- 新增checkbox ，if todo.isDone--->表示true，則checked(勾選)--}}
      <input type="checkbox" class="form-check-input mt-0" name="isDone" {{#if todo.isDone}} checked{{/if}}>
    </div>
    <input type="text" class="form-control" type="text" placeholder="name" name="name" value="{{todo.name}} ">
    <button class="btn btn-success" type="submit">Save</button>
  </div>

</form>