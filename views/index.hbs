{{!-- 點擊create會進到new.hbs --}}
<a href="/todos/new" class="btn btn-primary mb-3">Create</a>
<ul class="list-group">
  {{!-- 使用each把每個todos拿出迭代 --}}
  {{#each todos}}
  <li class="list-group-item">
    <div class="row">
      <div class="col-auto me-auto ">
        <input input style="vertical-align: middle;" type="checkbox" name="isDone" {{#if this.isDone}} checked {{/if}}
          disabled>
        <h4 style="display:inline;vertical-align:middle;">{{this.name}}</h4>
      </div>
      <div class="col-auto">
        <a class="btn btn-secondary" href="/todos/{{this.id}}">detail</a>
        {{!-- 設定編輯入口 --}}
        <a class="btn btn-success" href="/todos/{{this.id}}/edit">edit</a>
        {{!-- 設定刪除入口。新增form，因為要用post --}}
        <form action="/todos/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button class="btn btn-danger" type="submit">delete</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>